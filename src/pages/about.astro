---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "私について";
const happy = false;
const finished = false;
const goal = 3;

const identity = {
    firstName: "小松",
    country: "日本",
    occupation: "フリーター",
    hobbies: ["ギターを弾くこと", "野球をすること"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro"];

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<style define:vars={{ skillColor, fontWeight, textCase }}>
    h1 {
        color: purple;
        font-size: 4rem;
    }
    .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
    }
</style>

<BaseLayout pageTitle={pageTitle}>
    <h2>自己紹介</h2>

    <p>プログラミング学習中の男。</p>

    {happy && <p>I am happy to be learning Astro!</p>}

    {finished && <p>I finished this tutorial!</p>}

    {goal === 3 ? <p>３ヶ月後に就職しようとしています。</p> : <p>マジです。</p>}

    <p>詳細です。</p>
    <ul>
        <li>私の名前は{identity.firstName}です。</li>
        <li>
            私は{identity.country}に住んでいます。 {
                identity.occupation
            }で生計を立てています。
        </li>
        {
            identity.hobbies.length >= 2 && (
                <li>
                    趣味は{identity.hobbies[0]}と{identity.hobbies[1]}です。
                </li>
            )
        }
    </ul>
    <p>使える技術:</p><p></p><ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
</BaseLayout>
